<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<ListBox Width="200">
		<ListBoxItem Content="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource Mode=Self}}"/>
		<ListBoxItem Content="ListBoxItem1-1" />
		<ListBoxItem Content="ListBoxItem1-2" />
	</ListBox>
	<ListBox Width="200" HorizontalContentAlignment="Stretch">
		<ListBoxItem Content="ListBoxItem1-2" />
		<ListBoxItem Content="ListBoxItem2-2" />
	</ListBox>
	<ListBox Width="200" HorizontalContentAlignment="Center">
		<ListBoxItem Content="ListBoxItem3-1" />
		<ListBoxItem Content="ListBoxItem3-2" />
	</ListBox>
	<ListBox Width="200" HorizontalContentAlignment="Right">
		<ListBoxItem Content="ListBoxItem4-1" />
		<ListBoxItem Content="ListBoxItem4-2" />
	</ListBox>
</StackPanel>