<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50" />
			<ColumnDefinition Width="50" />
			<ColumnDefinition Width="50" />
		</Grid.ColumnDefinitions>
		<Border Grid.Column="0" Background="Cyan">
			<TextBlock Text="1st Column" />
		</Border>
		<Border Grid.Column="1" Background="Yellow">
			<TextBlock Text="2nd Column" />
		</Border>
		<Border Grid.Column="2" Background="Magenta">
			<TextBlock Text="3rd Column" />
		</Border>
	</Grid>
</UserControl>