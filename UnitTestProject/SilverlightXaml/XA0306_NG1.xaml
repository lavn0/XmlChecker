<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="Cyan">
			<TextBlock Text="1st Row" />
		</Border>
		<Border Grid.Row="1" Background="Yellow">
			<TextBlock Text="2nd Row" />
		</Border>
		<Border Grid.Row="2" Background="Magenta">
			<TextBlock Text="3rd Row" />
		</Border>
	</Grid>
</UserControl>